<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd ">

    <changeSet id="2020-11-01--3-users-and-roles-add-users-pk" author="Konstantin Egorov">
        <addPrimaryKey tableName="users" columnNames="id"/>
        <rollback>
            ALTER TABLE tasks DROP CONSTRAINT users_pkey;
        </rollback>
    </changeSet>
    <changeSet id="2020-11-01--3-users-and-roles-add-roles-pk" author="Konstantin Egorov">
        <addPrimaryKey tableName="roles" columnNames="id"/>
        <rollback>
            ALTER TABLE tasks DROP CONSTRAINT roles_pkey;
        </rollback>
    </changeSet>
</databaseChangeLog>